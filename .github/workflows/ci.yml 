name: ci
on: [pull_request, push]
jobs:
  ci:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2
      - uses: actions/setup-python@v2
      - run: pip install -r requirements-dev.txt
      - run: flake8 . --count --select=E9,F63,F7,F82 --show-source --statistics
      - run: pytest -v
